<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yong.mall.dao.GoodsDao">

	<select id="queryAll" resultType="GoodsInfo">
		SELECT * 
		FROM goods_info
		LIMIT #{offset},#{limit} 
	</select>
	
	<select id="queryById" resultType="GoodsInfo">
		SELECT *
		FROM goods_info
		WHERE id = #{id}
	</select>
	
	<insert id="add" parameterType="GoodsInfo">
		INSERT INTO goods_info(name,title,price,number,introduce) 
		VALUES (#{name},#{title},#{price},#{number},#{introduce})
	</insert>
	
	<delete id="remove">
		DELETE FROM goods_info
		WHERE id = #{id}
	</delete>
	
	<update id="change" parameterType="GoodsInfo">
		UPDATE goods_info
		SET 
		<if test="name != null">
			name = #{name}
		</if>
		<if test="title != null">
			title = #{title}
		</if>
		<if test="price != price">
			price = #{price}
		</if>
		<if test="number != null">
			number = #{number}
		</if>
		<if test="introduce != null">
			introduce = #{introduce}
		</if>
		WEHRE id = #{id}
	</update>

</mapper>